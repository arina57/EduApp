<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">



    <crosslibrary.droid.views.CrossContainerView
        app:containerId="activityTitle"
            android:id="@+id/activityTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            />


  <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/vocabRecyclerView"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          app:layout_constraintHeight_max="150dp"
          app:layout_constraintHeight_min="20dp"
          app:layout_constrainedHeight="true"
          android:layout_marginEnd="8dp"
          android:layout_marginStart="8dp"
          android:layout_marginTop="8dp"
          android:elevation="2dp"
          android:gravity="center"
          android:fadeScrollbars="false"
          android:scrollbarAlwaysDrawVerticalTrack="true"
          android:scrollbars="vertical"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/activityTitle" />


  <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/gapfillRecyclerView"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_marginBottom="8dp"
          android:layout_marginEnd="8dp"
          android:layout_marginStart="8dp"
          android:layout_marginTop="8dp"
          android:minHeight="50dp"
          android:fadeScrollbars="false"
          android:scrollbarAlwaysDrawVerticalTrack="true"
          android:scrollbars="vertical"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/vocabRecyclerView" />




  <TextView
          android:id="@+id/invisibleTextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="5dp"
          android:layout_marginEnd="5dp"
          android:layout_marginStart="5dp"
          android:layout_marginTop="2dp"
          android:paddingBottom="0dp"
          android:paddingEnd="10dp"
          android:paddingStart="10dp"
          android:paddingTop="0dp"
          android:text="Vocab cell"
          android:textAlignment="center"
          android:textSize="18sp"
          android:visibility="invisible"/>


</androidx.constraintlayout.widget.ConstraintLayout>