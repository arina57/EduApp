<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
        >

	<crosslibrary.droid.views.CrossContainerView
		app:containerId="activityTitle"
		android:id="@+id/activityTitle"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="8dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
            />


	<androidx.recyclerview.widget.RecyclerView
		app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
		app:spanCount="2"
		android:id="@+id/matchPhraseOptions"
		android:background="#FFFFFF"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		app:layout_constraintHeight_max="150dp"
		app:layout_constraintHeight_min="20dp"
		app:layout_constrainedHeight="true"
		android:elevation="2dp"
		android:fadeScrollbars="false"
		android:scrollbarAlwaysDrawVerticalTrack="true"
		android:scrollbars="vertical"
		android:layout_marginStart="8dp"
		android:layout_marginLeft="8dp"
		android:layout_marginTop="8dp"
		android:layout_marginEnd="8dp"
		android:layout_marginRight="8dp"
		app:layout_constraintBottom_toTopOf="@+id/mainPhraseOptions"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/activityTitle"
            />


	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/mainPhraseOptions"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"
		android:layout_marginBottom="8dp"
		android:layout_marginTop="8dp"
		android:fadeScrollbars="false"
		android:scrollbarAlwaysDrawVerticalTrack="true"
		android:scrollbars="vertical"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/matchPhraseOptions"
            />
	<View
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:background="@drawable/dashedboxclear"
		app:layout_constraintStart_toStartOf="@+id/mainPhraseOptions"
		app:layout_constraintEnd_toEndOf="@+id/mainPhraseOptions"
		app:layout_constraintTop_toTopOf="@+id/mainPhraseOptions"
		app:layout_constraintBottom_toBottomOf="@+id/mainPhraseOptions"
		/>


</androidx.constraintlayout.widget.ConstraintLayout>