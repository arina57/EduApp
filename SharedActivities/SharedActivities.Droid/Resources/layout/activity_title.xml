<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
        >

    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/questionIconLottieView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintWidth_percent=".15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

    <TextView
            android:text=""
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/titleTextView"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="left"
            android:textColor="#6E6E70"
            app:layout_constraintTop_toTopOf="@+id/questionIconLottieView"
            app:layout_constraintBottom_toTopOf="@+id/subTitleTextView"
            app:layout_constraintStart_toEndOf="@+id/questionIconLottieView"
            android:layout_marginStart="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            />

    <TextView
            android:text=""
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#6E6E70"
            android:textSize="16sp"
            android:id="@+id/subTitleTextView"
            app:layout_constraintTop_toBottomOf="@+id/titleTextView"
            app:layout_constraintBottom_toTopOf="@+id/situationTextView"
            app:layout_constraintStart_toEndOf="@+id/questionIconLottieView"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            />
    <TextView
            android:id="@+id/situationTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:visibility="visible"
            android:textSize="14sp"
            android:text=""
            android:textStyle="bold"
            android:gravity="start"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/questionIconLottieView"
            app:layout_constraintTop_toBottomOf="@+id/subTitleTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>